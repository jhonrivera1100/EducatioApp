<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:background="@drawable/blue_nav">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="157dp"
            android:layout_height="138dp"
            android:src="@drawable/perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nombre Completo"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/correo_perfil"
        android:layout_width="337dp"
        android:layout_height="68dp"
        android:layout_marginTop="36dp"
        android:drawableStart="@drawable/carta"
        android:drawablePadding="20dp"
        android:hint="Correo Electrónico"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ciudad_perfil"
        android:layout_width="337dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/carta"
        android:drawablePadding="20dp"
        android:hint="Ciudad"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correo_perfil" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/telefono"
        android:layout_width="337dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/carta"
        android:drawablePadding="20dp"
        android:hint="Teléfono"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ciudad_perfil" />

</androidx.constraintlayout.widget.ConstraintLayout>

