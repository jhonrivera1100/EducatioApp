<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con forma de gradiente -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#98DFFF"
                android:centerColor="#2186F3"
                android:endColor="#0B32BD" />
        </shape>
    </item>
    <!-- Imagen superpuesta -->
    <item
        android:drawable="@drawable/azul2"
        android:gravity="center" /> <!-- Ajusta la gravedad segÃºn sea necesario -->
</layer-list>